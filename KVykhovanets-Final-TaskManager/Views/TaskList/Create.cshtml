@model KVykhovanets_Final_TaskManager.Models.TaskList

@{
    ViewData["Title"] = "Create Task List";
}

<h2>Create a New Task List</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="UseDueDate" class="form-check-input" />
        <label asp-for="UseDueDate" class="form-check-label">Include Due Dates</label>
    </div>

    <div class="form-check">
        <input asp-for="UseImportance" class="form-check-input" />
        <label asp-for="UseImportance" class="form-check-label">Include Importance Levels</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create List</button>
</form>
